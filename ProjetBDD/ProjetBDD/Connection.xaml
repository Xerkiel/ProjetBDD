<Page x:Class="ProjetBDD.Connection"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetBDD"
        mc:Ignorable="d"
        Height="450" Width="400" Background="#FF1B00FF">
    <Grid>
        <Frame x:Name="main" />
        <StackPanel Margin="60">
            <Label Foreground="White" Content="Identifiant :" FontSize="16" />
            <TextBox Height="35" TextWrapping="Wrap" FontSize="24" Margin="0,10"/>
            <Label Foreground="White" Content="Mot de Passe :" FontSize="16" />
            <PasswordBox x:Name="passewordBox" FontSize="24"/>
            <Grid Margin="0,10" Height="43">
                <Button Content="S'en foutre" Margin="1" Click="Button_Click"/>
                <Button Content="S'inscrire" Grid.Column="1" Margin="1" Click="Button_Click_1"/>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>
            </Grid>

        </StackPanel>

    </Grid>
</Page>
