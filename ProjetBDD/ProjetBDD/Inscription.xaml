<Page x:Class="ProjetBDD.Inscription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetBDD"
        mc:Ignorable="d"
        x:Name="inscription"
        Height="450" Width="400" Background="#FF1B00FF">
    <Grid>
        <StackPanel Margin="50,30">
            <Label Foreground="White" Content="Identifiant :" FontSize="16" />
            <TextBox Height="35" TextWrapping="Wrap" FontSize="24" Margin="0,10"/>
            <Label Foreground="White" Content="Numéro de téléphone :" FontSize="16" />
            <TextBox Height="35" TextWrapping="Wrap" FontSize="24" Margin="0,10"/>
            <Label Foreground="White" Content="Mot de Passe :" FontSize="16" />
            <PasswordBox x:Name="passewordBox" FontSize="24"/>
            <Label Foreground="White" Content="Confirmer mot de passe :" FontSize="16" />
            <PasswordBox FontSize="24"/>
            <Button x:Name="confirm" Content="Terminer l'inscription" Margin="0,20" FontSize="20" Click="confirm_Click"/>

        </StackPanel>

    </Grid>
</Page>
